extends layout

block append styles
	link(rel="stylesheet", href="css/colors.css")

block content
	.container
		.palette
			ul#colors
				li.red(data-color="red")
				li.yellow(data-color="yellow")
				li.green(data-color="green")
				li.aquamarine(data-color="aquamarine")
				li.black(data-color="black")

block append scripts
	script(src="js/colors.js")